<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CustomAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/orange_light</item>
        <item name="colorPrimaryVariant">@color/greyish</item>
        <item name="colorOnPrimary">@color/orange_light</item>
        <item name="colorSecondary">@color/greyish</item>
        <item name="colorSecondaryVariant">@color/greyish</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CustomAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CustomAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>